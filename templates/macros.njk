{% macro navList(options, class='') %}
    <ul class='{{ class }}'>
    {% for link in options %}
        <li><a href='{{ link.href }}'>{{ link.title }}</a></li>
    {% endfor %}
{% endmacro %}

{% macro makePostSummary(post) %}
    <a class="grid-item post-link" href="{{ post.link }}">
        <div class="post cover-image">
            <div class="post-title">
                <h3>{{ post.title }}</h3>
            </div>
            <div class="post-summary">
                <p>{{ post.summary }}</p>
            </div>
        </div>
    </a>
{% endmacro %}

{% macro loopThroughPosts(posts, func) %}
    {% for post in posts %}
    {% func(post) %}
    {% endfor %}
{% endmacro %}

